---
import Layout from '../../layouts/Layout.astro';
import { UiTabs, UiTabsList, UiTabsTrigger, UiTabsContent } from '../../components/tabs';
---

<Layout title="Tabs" showSidebar={true}>
    <div class="space-y-8">
        <div>
          <h1 class="text-3xl font-bold tracking-tight">Tabs</h1>
          <p class="text-lg text-muted-foreground mt-2">
            A set of layered sections of content—known as tab panels—that are displayed one at a time.
          </p>
        </div>

        <section class="space-y-4">
            <div class="p-6 border rounded-lg bg-card">
              <UiTabs client:only='lit' defaultValue="account" class="w-[400px]">
                <UiTabsList client:only='lit' class="grid w-full grid-cols-2">
                  <UiTabsTrigger client:only='lit' value="account">Account</UiTabsTrigger>
                  <UiTabsTrigger client:only='lit' value="password">Password</UiTabsTrigger>
                </UiTabsList>
                <UiTabsContent client:only='lit' value="account">
                  <div class="p-4 border rounded-md mt-2">
                      <h3 class="font-semibold">Account</h3>
                      <p class="text-sm text-muted-foreground">Make changes to your account here.</p>
                  </div>
                </UiTabsContent>
                <UiTabsContent client:only='lit' value="password">
                  <div class="p-4 border rounded-md mt-2">
                      <h3 class="font-semibold">Password</h3>
                      <p class="text-sm text-muted-foreground">Change your password here.</p>
                  </div>
                </UiTabsContent>
              </UiTabs>
            </div>
          </section>
    </div>
</Layout>
