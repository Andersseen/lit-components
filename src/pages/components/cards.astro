---
import Layout from '../../layouts/Layout.astro';
import { UiCard, UiCardHeader, UiCardTitle, UiCardDescription, UiCardContent, UiCardFooter } from '../../components/card';
import { UiButton } from '../../components/button/ui-button';
---

<Layout title="Cards" showSidebar={true}>
    <div class="space-y-8">
        <div>
          <h1 class="text-3xl font-bold tracking-tight">Cards</h1>
          <p class="text-lg text-muted-foreground mt-2">
            Displays a card with header, content, and footer.
          </p>
        </div>

        <section class="space-y-4">
            <div class="flex flex-wrap gap-6">
                <!-- Simple Card -->
                <UiCard client:only='lit' class="w-[350px]">
                    <UiCardHeader client:only='lit'>
                        <UiCardTitle client:only='lit'>Create project</UiCardTitle>
                        <UiCardDescription client:only='lit'>Deploy your new project in one-click.</UiCardDescription>
                    </UiCardHeader>
                    <UiCardContent client:only='lit'>
                        <p class="text-sm text-muted-foreground">
                            Basic configuration options containing name, framework, and deployment settings.
                        </p>
                    </UiCardContent>
                    <UiCardFooter client:only='lit' class="flex justify-between">
                        <UiButton client:only='lit' variant="outline">Cancel</UiButton>
                        <UiButton client:only='lit'>Deploy</UiButton>
                    </UiCardFooter>
                </UiCard>
            </div>
        </section>
    </div>
</Layout>
