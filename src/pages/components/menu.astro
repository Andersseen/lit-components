---
import Layout from '../../layouts/Layout.astro';
import { UiMenu, UiMenuItem } from '../../components/menu';
---

<Layout title="Menu" showSidebar={true}>
    <div class="space-y-8">
        <div>
          <h1 class="text-3xl font-bold tracking-tight">Menubar</h1>
          <p class="text-lg text-muted-foreground mt-2">
            A visually persistent menu common in desktop applications that provides quick access to a consistent set of commands.
          </p>
        </div>

        <section class="space-y-4">
            <div class="p-6 border rounded-lg bg-card text-foreground">
              <UiMenu client:only='lit'>
                  <UiMenuItem client:only='lit'>File</UiMenuItem>
                  <UiMenuItem client:only='lit'>Edit</UiMenuItem>
                  <UiMenuItem client:only='lit'>View</UiMenuItem>
                  <UiMenuItem client:only='lit'>Profiles</UiMenuItem>
              </UiMenu>
            </div>
          </section>
    </div>
</Layout>
